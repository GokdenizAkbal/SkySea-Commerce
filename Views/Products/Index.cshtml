@model List<Product>

<div class="d-flex justify-content-between align-items-center">
    <h1 class="h3 b-3">Products</h1>
    <a class="btn btn-outline-danger" asp-controller="Products" asp-action="List">All Products</a>
</div>

<div class="row">
    @foreach (Product product in Model)
    {
        @if (product.isAvailable)
        {
            <div class="col-md-3">
                @await Html.PartialAsync("_ProductCard", product)
            </div>
        }
    }
</div>